<UserControl x:Class="D3Demo.RealVisualMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:D3Demo"
             xmlns:d3="clr-namespace:InteractiveDataDisplay.WPF;assembly=InteractiveDataDisplay.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <d3:Chart x:Name="Chart1">
            <Grid>
                <d3:Plot x:Name="Plot1">
                    <d3:MouseNavigation Height="{Binding ElementName=Plot1,Path=ActualHeight}" Width="{Binding ElementName=Plot1, Path=ActualWidth}"/>
                    <TextBlock x:Name="coordinateTB" FontSize="20">0,0</TextBlock>
                </d3:Plot>
            </Grid>
        </d3:Chart>
    </Grid>
</UserControl>
